<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@android:style/Theme.Holo"
    android:background="#ff000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainLobby" >


    <TextView
        android:id="@+id/main_lobby_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/mainLobbyTitle"
        android:paddingTop="2dip"
        android:textSize="34sp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffc16721"
        />


        <!--- this will make 2 columms -->
    <LinearLayout
        android:id="@+id/create_buttom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/main_lobby_tittle"
        >


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:text="@string/createGame" />
    </LinearLayout>


    <ListView
        android:id="@+id/GamesListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/create_buttom">
    </ListView>


</RelativeLayout><!-- From: file:/C:/Users/Owner/AndroidstudioProjects/TagPi2/app/src/main/res/layout/activity_main_lobby.xml -->